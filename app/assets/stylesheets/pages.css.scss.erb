.header_resize {
  font-size: 200px;
  text-align: center;
}

.home_page_heading {
  padding-top: 8em;
  color: white;
}

.main_header_text {
  font-size: 2.5em;
}

.home_page_feature_list {
  margin-bottom: 20px;
}

.fadeInUp {
  animation: fadeInUp 1.5s;
}

.home_list_and_button {
  margin-left: 20px;
}

#github_icon {
  position:absolute;
  bottom:0;
  right:0;
  margin: 0em 0.80rem 0em 0em;
  color: white;
  font-size: 2.7em;
}

#privacy_page_link {
  position:absolute;
  bottom:0;
  left:0;
  margin: 0em 0em 0.5em 0.8rem;
  color: white;
}

@-webkit-keyframes fadeInUp {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

@-webkit-keyframes fadeInRight {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
  }
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
  }
}

.fadeInRight {
  opacity: 0;
  -webkit-animation: fadeInRight 1.5s forwards;
  animation: fadeInRight 1.5s forwards;
  animation-delay: 1s;
}

.fadeInRightSecond {
  opacity: 0;
  -webkit-animation: fadeInRight 1.5s forwards;
  animation: fadeInRight 1.5s forwards;
  animation-delay: 1.2s;
}

.fadeInRightThird {
  opacity: 0;
  -webkit-animation: fadeInRight 1.5s forwards;
  animation: fadeInRight 1.5s forwards;
  animation-delay: 1.4s;
}

.fadeInRightFourth {
  opacity: 0;
  -webkit-animation: fadeInRight 1.5s forwards;
  animation: fadeInRight 1.5s forwards;
  animation-delay: 1.6s;
}

.fadeInRightFifth {
  opacity: 0;
  -webkit-animation: fadeInRight 1.5s forwards;
  animation: fadeInRight 1.5s forwards;
  animation-delay: 1.8s;
}

.home_page {
  background-color: #ff7700;
  /* background by SVGBackgrounds.com */
  background: url(<%= asset_path 'background_image.svg' %>);
  background-size: cover;
  height: 100vh;
}

@media screen and (max-width: 800px) {
  .home_page {
    background-color: #ff7700;
    background: url(<%= asset_path 'mobile_background_image.svg' %>);
    background-size: cover;
    height: 100vh;
  }
  .home_page_heading {
    padding-top: 5em;
    color: white;
  }
}

