$('.flash_alerts').html('<%= j render("layouts/flash") %>')
$('.flash_container').fadeOut(2000)
<% flash.clear %>

$( "a#edit_project" ).click(function() {
  $('a#edit_project').addClass('active')
  $('a#members').removeClass('active')
  $('a#posts').removeClass('active')
  $('.edit_project').html("<%= j render "add_user_form" %>")
    $('.ui.dropdown').dropdown()
    $('.ui.form')
    .form({
      fields: {
        project_user_ids: 'empty',
        prompt: 'Please select at least one user to add.'
      }
    });
});

$( "a#members" ).click(function() {
  $('a#members').addClass('active')
  $('a#edit_project').removeClass('active')
  $('a#posts').removeClass('active')
  $('.edit_project').html("<%= j render "remove_members_form" %>")
});

$( "a#posts" ).click(function() {
  $('a#posts').addClass('active')
  $('a#edit_project').removeClass('active')
  $('a#members').removeClass('active')
  $('.edit_project').html("<%= j render "project_posts" %>")
});



