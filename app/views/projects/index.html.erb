<h1>Current Projects</h1>
<% if current_user %>
  <% if current_user.projects.any? %>
    <div class="ui column centered grid">
      <% current_user.projects.each do |project| %>
      <div class="ui card">
        <div class="content">
          <div class="center aligned header"><%= link_to project.title, project_path(project) %></div>
          <div class="center aligned description">
            <p><%= project.description%></p>
          </div>
        </div>
         <div class="extra content">
          <div class="center aligned author">
        <% if project.users.length > 5 %>
          <div class="ui circular labels">
            <a class="ui label">
              <%= project.users.count %> Members
            </a>
          </div>
        <% else %>
          <% project.users.each do |user| %>
              <div class="ui image circular">
                <img src="https://api.adorable.io/avatars/40/<%=user.name%>.png" data-title="Elliot Fu" data-content="Elliot has been a member since July 2012" class="ui avatar image">
              </div>
          <% end %>
        <% end %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  <% else %>
    <p>There are no projects assigned or created yet.</p>
  <% end %>
<% else %>
  <p>Please sign in to see projects.</p>
<% end %>
