<!DOCTYPE html>
<html>
  <head>
    <title>Pmtool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
  </head>
  <body class="pushable">
  <div class="ui left visible vertical inverted sidebar labeled menu">
    <a class="item nav_logo_icon">
      <i class="bars icon"></i>
      Menu
    </a>
    <% if current_user %>
      <%= link_to 'Projects', projects_path, class: 'item' %>
      <%= link_to 'New Project', new_project_path, class: 'item' %>
      <%= link_to 'Chat Rooms', chat_rooms_path, class: 'item' %>
    <% end %>
    <% if current_user %>
      <div class="item">
      <% if current_user.profile_picture? %>
        <img class="ui avatar image" src="<%=current_user.profile_picture%>"><%= link_to "#{current_user.name}", '/users/edit' %>
      <% else %>
        <img class="ui avatar image" src="https://robohash.org/<%=current_user.email%>"><%= link_to "#{current_user.name}", '/users/edit' %>
      <% end %>
    </div>
    <%= link_to 'Sign Out', destroy_user_session_path, :data => {:method => 'delete'}, class: 'item' %>
  <% else %>
    <%= link_to 'Sign In', new_user_session_path, class: 'item' %>
  <% end %>
    <a class="item">
      <i class="block layout icon"></i>
      Account
    </a>
    <a class="item">
      <i class="smile icon"></i>
      Chat Rooms
    </a>
  </div>
    <div class="pusher">
      <div class="body_content">
      <div class="application_flash_messages"></div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
